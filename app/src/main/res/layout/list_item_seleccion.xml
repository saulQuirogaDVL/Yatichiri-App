<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txt_Palabra"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:background="#FFD700"
        android:gravity="center"
        android:text="Palabra"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/txt_Palabra"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/radio_uno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DAA520"
            android:buttonTint="@color/colorRadio"
            android:onClick="onRadioButtonClicked"
            android:text="Primera Opcion"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radio_dos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DAA520"
            android:buttonTint="@color/colorRadio"
            android:onClick="onRadioButtonClicked"
            android:text="Segunda Opcion"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radio_tres"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DAA520"
            android:buttonTint="@color/colorRadio"
            android:onClick="onRadioButtonClicked"
            android:text="Tercera Opcion"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radio_cuatro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#DAA520"
            android:buttonTint="@color/colorRadio"
            android:onClick="onRadioButtonClicked"
            android:text="Cuarta Opcion"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </RadioGroup>
</LinearLayout>