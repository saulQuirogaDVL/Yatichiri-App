<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
    android:id="@+id/txt_Palabra_Aymara"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#FFD700"
    android:gravity="center"
    android:text="Palabra Aymara"
    android:textColor="#FFFFFF"
    android:textSize="30dp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.495"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Palabra"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFAA2B"
        android:gravity="center"
        android:text="Palabra"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Palabra_Aymara" />

    <ImageButton
        android:id="@+id/btn_Sonido"
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#FFF6DF"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Palabra"
        app:srcCompat="@drawable/micro" />
</LinearLayout>